<meta name="robots" content="<%- robots %>">
<meta property="og:locale" content="pt_BR">
<meta property="og:site_name" content="<%- config.title %>">
<!-- favicon -->
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<link rel="manifest" href="/site.webmanifest">

<% if(is_post()){ %>
    <% const description = (page.description || page.excerpt).slice(0, 200); %>

    <link rel="canonical" href="<%- page.permalink %>">
    <%- print_tags_with_template(page.tags, "<meta property=\"article:tag\" content=\"{tag.name}\">") %>
    <%- print_categories_with_template(page.categories, "<meta property=\"article:section\" content=\"{category.name}\">") %>
    <meta name="description" content="<%- description %>">
<!--    <meta property="article:published_time" content="2020-03-23T20:16:33+00:00">-->

    <!-- open-graph -->
    <meta property="og:url" content="<%- page.permalink %>">
    <meta property="og:description" content="<%- description %>">
    <meta property="og:type" content="article">
    <meta property="og:title" content="<%- page.title %>">
    <%- print_with_condition(
            page.featured_image && page.featured_image.url,
            `<meta property="og:image" content="${page.featured_image.url}">`
    ) %>

    <%- print_with_condition(
            page.featured_image && page.featured_image.width,
            `<meta property="og:image:width" content="${page.featured_image.width}">`
    ) %>

    <%- print_with_condition(
            page.featured_image && page.featured_image.height,
            `<meta property="og:image:height" content="${page.featured_image.height}">`
    ) %>

    <!-- twitter -->
    <meta name="twitter:description" content="<%- description %>">
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="<%- page.title %>">
    <%- print_with_condition(
            page.featured_image && page.featured_image.url,
            `<meta name="twitter:image" content="${page.featured_image.url}">`
    ) %>

<% } //end if(is_post()) %>
